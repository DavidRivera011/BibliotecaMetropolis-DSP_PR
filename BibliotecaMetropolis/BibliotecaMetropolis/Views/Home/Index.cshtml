@model BibliotecaMetropolis.Models.DashboardViewModel

@{
    ViewData["Title"] = "Inicio";
    Layout = "_Layout";

    // helper seguro para inicial
    string usuarioNombreSafe = string.IsNullOrWhiteSpace(Model.UsuarioNombre) ? string.Empty : Model.UsuarioNombre.Trim();
    string inicial = !string.IsNullOrEmpty(usuarioNombreSafe) ? usuarioNombreSafe.Substring(0, 1).ToUpperInvariant() : "U";
}

<div class="dashboard-container container py-4">

    <!-- HEADER / TOP ROW -->
    <div class="d-flex flex-column flex-md-row align-items-start align-items-md-center justify-content-between gap-3 mb-4">
        <div class="d-flex align-items-center gap-3">
            <div class="user-avatar rounded-circle d-flex align-items-center justify-content-center">
                @inicial
            </div>

            <div>
                <div class="h6 mb-0 fw-bold">@(!string.IsNullOrWhiteSpace(Model.UsuarioNombre) ? Model.UsuarioNombre : "Invitado")</div>
                <div class="text-muted small">@(!string.IsNullOrWhiteSpace(Model.Rol) ? Model.Rol : "Sin rol")</div>
            </div>
        </div>

        <div class="d-flex gap-2 align-items-center">
            <div class="stat d-flex flex-column text-end me-2">
                <span class="text-muted small">Recursos registrados</span>
                <span class="stat-number fw-bold">@Model.RecursosCount</span>
            </div>
            <div class="stat d-flex flex-column text-end">
                <span class="text-muted small">Editoriales</span>
                <span class="stat-number fw-bold">@Model.EditorialesCount</span>
            </div>
        </div>
    </div>

    <!-- SEARCH + ACTIONS -->
    <div class="d-flex flex-column flex-sm-row gap-2 align-items-stretch align-items-sm-center mb-3">
        <form method="get" asp-action="Index" class="flex-grow-1 d-flex gap-2">
            <input name="q" value="@Model.SearchTerm" class="form-control form-control-lg shadow-sm" placeholder="Buscar por título, autor, editorial o palabra clave..." aria-label="Buscar" />
            <button type="submit" class="btn btn-lg btn-primary ms-1">Buscar</button>
        </form>

        <div class="d-flex gap-2 mt-2 mt-sm-0">
            <a asp-controller="Recursos" asp-action="Create" class="btn btn-outline-primary btn-lg">+ Crear recurso</a>
        </div>
    </div>

    <!-- EMPTY STATE -->
    @if (Model.Recursos == null || !Model.Recursos.Any())
    {
        <div class="alert alert-info mt-4">
            <strong>No hay recursos</strong> — no se encontraron resultados para tu búsqueda o todavía no hay recursos registrados.
        </div>
    }
    else
    {
        <!-- GRID DE RECURSOS -->
        <div class="recurso-grid mt-3">
            @foreach (var item in Model.Recursos)
            {
                <article class="recurso-card" role="article" aria-label="@item.Titulo">
                    <div class="recurso-thumb">
                        @if (!string.IsNullOrEmpty(item.ImagenRuta))
                        {
                            <img src="@item.ImagenRuta" alt="@item.Titulo" onerror="this.onerror=null;this.src='/images/no-image-available.svg';" />
                        }
                        else
                        {
                            <div class="thumb-placeholder">Sin imagen</div>
                        }
                    </div>

                    <div class="recurso-body">
                        <div class="title-row">
                            <h5 class="recurso-title" title="@item.Titulo">@item.Titulo</h5>
                            @if (!string.IsNullOrWhiteSpace(item.Autor))
                            {
                                <div class="recurso-author text-muted" title="@item.Autor">@item.Autor</div>
                            }
                        </div>

                        <div class="d-flex justify-content-between align-items-center mt-3">
                            <a asp-controller="Recursos" asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary">Ver más</a>
                            <div class="meta text-muted small text-end">
                                @if (!string.IsNullOrWhiteSpace(item.Editorial))
                                {
                                    <div>@item.Editorial</div>
                                }
                                <div class="mt-1">@(!string.IsNullOrWhiteSpace(item.Pais) ? item.Pais : "")</div>
                            </div>
                        </div>
                    </div>
                </article>
            }
        </div>
    }

</div>

@section Styles {
    <style>
        /* Container tweaks */
        .dashboard-container { max-width: 1200px; }

        /* Avatar */
        .user-avatar {
            width: 64px;
            height: 64px;
            background: #ff8a00;
            color: #fff;
            font-weight: 700;
            font-size: 1.25rem;
            display: inline-flex;
            align-items: center;
            justify-content: center;
        }

        /* Statistics */
        .stat-number { font-size: 1.45rem; color: #111; }

        /* Grid */
        .recurso-grid {
            display: grid;
            grid-template-columns: repeat(1, 1fr);
            gap: 1rem;
        }

        @media (min-width: 576px) {
            .recurso-grid { grid-template-columns: repeat(2, 1fr); }
        }
        @media (min-width: 992px) {
            .recurso-grid { grid-template-columns: repeat(3, 1fr); }
        }

        /* Card */
        .recurso-card {
            display: flex;
            flex-direction: column;
            background: #fff;
            border: 1px solid #e9ecef;
            border-radius: 10px;
            overflow: hidden;
            box-shadow: 0 1px 2px rgba(0,0,0,0.03);
            transition: transform .12s ease, box-shadow .12s ease;
            min-height: 220px;
        }

        .recurso-card:hover {
            transform: translateY(-4px);
            box-shadow: 0 6px 18px rgba(0,0,0,0.08);
        }

        .recurso-thumb {
            height: 140px;
            background: #fbfbfb;
            display: flex;
            align-items: center;
            justify-content: center;
            overflow: hidden;
        }

        .recurso-thumb img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            display: block;
        }

        .thumb-placeholder {
            color: #999;
            font-size: 0.95rem;
        }

        .recurso-body {
            padding: 12px 14px;
            display: flex;
            flex-direction: column;
            justify-content: space-between;
            flex: 1 1 auto;
        }

        .recurso-title {
            margin: 0;
            font-size: 1.02rem;
            line-height: 1.15;
            overflow: hidden;
            display: -webkit-box;
            -webkit-line-clamp: 2;
            -webkit-box-orient: vertical;
        }

        .recurso-author {
            font-size: 0.9rem;
            color: #6c757d;
            margin-top: 6px;
        }

        .btn-more, .btn-more:visited {
            text-decoration: none;
        }

        /* Search styles */
        form[asp-action="Index"] .form-control {
            border-radius: 8px;
        }

        .btn-lg.btn-primary {
            background: #ff8a00;
            border-color: #ff8a00;
        }

        /* Small responsive tweaks */
        @media (max-width: 575.98px) {
            .recurso-thumb { height: 120px; }
        }
    </style>
}

@section Scripts {
    <script>
        // script pequeño por si quieres manejar clicks o accesibilidad
        (function () {
            // Prevent image broken icon flash for missing images handled via onerror attribute.
        })();
    </script>
}
