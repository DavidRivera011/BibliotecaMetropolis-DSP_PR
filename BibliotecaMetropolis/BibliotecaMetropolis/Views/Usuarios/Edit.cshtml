@model BibliotecaMetropolis.Models.DB.Usuario
@using Microsoft.AspNetCore.Mvc.Rendering
@{
    ViewData["Title"] = "Editar usuario";
    Layout = "_Layout";
    var roles = ViewData["Roles"] as List<BibliotecaMetropolis.Models.DB.Rol> ?? new();
    var rolesSelect = new SelectList(roles, "IdRol", "NombreRol", Model?.IdRol ?? 0);
}

<div class="card p-4">
    <h4>@ViewData["Title"]</h4>

    <form asp-action="Edit" method="post">
        @Html.AntiForgeryToken()
        <input asp-for="IdUsuario" type="hidden" />

        <div class="mb-2">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        </div>

        <div class="row g-2">
            <div class="col-md-6">
                <label class="form-label">Nombre de usuario</label>
                <input asp-for="NombreUsuario" class="form-control" />
                <span asp-validation-for="NombreUsuario" class="text-danger"></span>
            </div>

            <div class="col-md-6">
                <label class="form-label">Nueva contraseña (opcional)</label>
                <input name="NewPassword" type="password" class="form-control" />
                <small class="text-muted">Dejar vacío para mantener la contraseña actual.</small>
            </div>

            <div class="col-md-6">
                <label class="form-label">Nombre completo</label>
                <input asp-for="NombreCompleto" class="form-control" />
                <span asp-validation-for="NombreCompleto" class="text-danger"></span>
            </div>

            <div class="col-md-3">
                <label class="form-label">Rol</label>
                <select asp-for="IdRol" asp-items="rolesSelect" class="form-select">
                    <option value="0">Seleccionar</option>
                </select>
            </div>

            <div class="col-md-3 d-flex align-items-end">
                <div class="form-check">
                    <input asp-for="Activo" class="form-check-input" />
                    <label class="form-check-label">Activo</label>
                </div>
            </div>
        </div>
        <br />
        @if (!string.IsNullOrEmpty(TempData["Error"] as string))
        {
            <div class="alert alert-danger">@Html.Raw(TempData["Error"] as string)</div>
        }
        @if (!string.IsNullOrEmpty(TempData["Message"] as string))
        {
            <div class="alert alert-success">@TempData["Message"]</div>
        }


        <div class="mt-3 d-flex gap-2">
            <button type="submit" class="btn" style="background:#ff8a00;color:white;">Guardar</button>
            <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
        </div>
    </form>
</div>
