@model IEnumerable<BibliotecaMetropolis.Models.DB.Usuario>
@{
    ViewData["Title"] = "Usuarios";
    Layout = "_Layout";
    var roles = ViewData["Roles"] as List<BibliotecaMetropolis.Models.DB.Rol> ?? new();
    string error = TempData["Error"] as string ?? string.Empty;
    string msg = TempData["Message"] as string ?? string.Empty;
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h4 class="mb-0">Usuarios</h4>
    <a asp-action="Create" class="btn" style="background:#ff8a00;color:#fff;">+ Nuevo usuario</a>
</div>

@if (!string.IsNullOrEmpty(error))
{
    <div class="alert alert-danger">@error</div>
}
@if (!string.IsNullOrEmpty(msg))
{
    <div class="alert alert-success">@msg</div>
}

<div class="row">
    <div class="col-lg-9">
        <div class="card p-3 mb-3" style="box-shadow:var(--card-shadow-soft);">
            <table class="table table-sm align-middle mb-0">
                <thead>
                    <tr>
                        <th>Usuario</th>
                        <th>Nombre completo</th>
                        <th>Rol</th>
                        <th class="text-center">Activo</th>
                        <th class="text-end">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @if (!Model.Any())
                    {
                        <tr>
                            <td colspan="5"><div class="text-muted">No hay usuarios.</div></td>
                        </tr>
                    }
                    else
                    {
                        foreach (var u in Model)
                        {
                            <tr>
                                <td>@u.NombreUsuario</td>
                                <td>@u.NombreCompleto</td>
                                <td>@(u.IdRolNavigation?.NombreRol ?? "—")</td>
                                <td class="text-center">
                                    @if (u.Activo)
                                    {
                                        <span class="badge bg-success">Sí</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">No</span>
                                    }
                                </td>
                                <td class="text-end">
                                    <a asp-action="Edit" asp-route-id="@u.IdUsuario" class="btn btn-sm btn-outline-primary me-1">Editar</a>

                                    <form asp-action="Delete" asp-route-id="@u.IdUsuario" method="post" style="display:inline;">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="btn btn-sm btn-outline-danger">Eliminar</button>
                                    </form>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>

    <!-- Roles -->
    <div class="col-lg-3">
        <div class="card p-3" style="box-shadow:var(--card-shadow-soft);">
            <div class="d-flex justify-content-between align-items-center mb-2">
                <strong>Roles</strong>
                <small class="text-muted">Compacto</small>
            </div>

            <form asp-controller="Roles" asp-action="Create" method="post" class="mb-2">
                @Html.AntiForgeryToken()
                <div class="input-group input-group-sm">
                    <input name="NombreRol" class="form-control form-control-sm" placeholder="Nuevo rol" />
                    <button class="btn btn-sm" style="background:#ff8a00;color:#fff;" type="submit">Agregar</button>
                </div>
            </form>

            <hr />

            <div style="max-height:360px; overflow:auto;">
                <table class="table table-sm mb-0">
                    <tbody>
                        @if (!roles.Any())
                        {
                            <tr><td class="text-muted small">Sin roles.</td></tr>
                        }
                        else
                        {
                            foreach (var r in roles)
                            {
                                <tr>
                                    <td class="small">@r.NombreRol</td>
                                    <td class="text-end">
                                        <form asp-controller="Roles" asp-action="Delete" method="post" style="display:inline;">
                                            @Html.AntiForgeryToken()
                                            <input type="hidden" name="id" value="@r.IdRol" />
                                            <button class="btn btn-sm btn-outline-danger" type="submit">Eliminar</button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
