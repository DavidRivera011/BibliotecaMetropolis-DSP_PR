@model BibliotecaMetropolis.Models.DB.Editorial

@{
    ViewData["Title"] = "Crear Editorial";
    Layout = "_Layout";
}

<div class="card p-4">
    <h4>@ViewData["Title"]</h4>

    @if (!string.IsNullOrEmpty(TempData["Error"] as string))
    {
        <div class="alert alert-danger">@Html.Raw(TempData["Error"] as string)</div>
    }

    <form asp-action="Create" method="post" novalidate>
        @Html.AntiForgeryToken()

        <div class="mb-3">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        </div>

        <div class="mb-3">
            <label class="form-label">Nombre</label>
            <input asp-for="Nombre" class="form-control" required />
            <span asp-validation-for="Nombre" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label class="form-label">Descripción</label>
            <textarea asp-for="Descripcion" class="form-control" rows="4"></textarea>
            <span asp-validation-for="Descripcion" class="text-danger"></span>
        </div>

        <div class="d-flex gap-2 mt-3">
            <button type="submit" class="btn" style="background:#ff8a00;color:white;">Crear</button>
            <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
        </div>
    </form>
</div>
