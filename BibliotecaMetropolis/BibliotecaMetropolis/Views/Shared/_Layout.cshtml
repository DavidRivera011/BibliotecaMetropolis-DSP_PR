@using Microsoft.AspNetCore.Http
@using System
@{
    var usuario = Context.Session.GetString("NombreUsuario");
    var rol = Context.Session.GetString("Rol");
    var token = Context.Session.GetString("JWToken");

    bool isAdmin = !string.IsNullOrEmpty(rol) && rol.Equals("Administrador", StringComparison.OrdinalIgnoreCase);
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BibliotecaMetropolis</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body class="bg-light">

    <nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm">
        <div class="container">
            <a class="navbar-brand d-flex align-items-center gap-2" asp-controller="Home" asp-action="Index">
                <div class="brand-circle-sm">BM</div>
                <span class="fw-bold">BibliotecaMetropolis</span>
            </a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="mainNav">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">

                    @if (isAdmin)
                    {
                        <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Index">Dashboard</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Usuarios" asp-action="Index">Usuarios</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Autor" asp-action="Index">Autores</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Editorial" asp-action="Index">Editoriales</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Recursos" asp-action="Index">Recursos</a></li>
                    }
                    else
                    {
                        <li class="nav-item"><a class="nav-link" asp-controller="Recursos" asp-action="Index">Recursos</a></li>
                    }
                </ul>

                <ul class="navbar-nav">
                    @if (!string.IsNullOrEmpty(token))
                    {
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <span class="me-2 small-avatar">@(!string.IsNullOrEmpty(usuario) ? usuario.Substring(0, 1).ToUpper() : "U")</span>
                                @usuario
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end">
                                <li class="dropdown-item-text">
                                    <small class="text-muted">Rol</small><br />
                                    <strong>@(rol ?? "Sin rol")</strong>
                                </li>
                                <li><hr class="dropdown-divider" /></li>

                                <li><a class="dropdown-item" asp-controller="Auth" asp-action="Logout">Cerrar sesión</a></li>
                            </ul>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item"><a class="nav-link" asp-controller="Auth" asp-action="Login">Iniciar sesión</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Auth" asp-action="Register">Registrarse</a></li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    <div class="container my-4">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="bg-white border-top py-3">
        <div class="container text-center text-muted small">
            &copy; 2025 - BibliotecaMetropolis
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
