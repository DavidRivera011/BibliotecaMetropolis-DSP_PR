@model IEnumerable<BibliotecaMetropolis.Models.DB.Autor>

@{
    ViewData["Title"] = "Autores";
    Layout = "_Layout";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h4 class="mb-0">Autores</h4>
    <a asp-action="Create" class="btn" style="background:#ff8a00;color:#fff;">+ Nuevo autor</a>
</div>

@if (!Model.Any())
{
    <div class="alert alert-light">No hay autores registrados.</div>
}
else
{
    <div class="card p-3" style="box-shadow:var(--card-shadow-soft);background:white;">
        <table class="table align-middle">
            <thead>
                <tr>
                    <th>Nombre</th>
                    <th>Apellidos</th>
                    <th class="text-center">Recursos asociados</th>
                    <th class="text-end">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var autor in Model)
                {
                    var fullName = $"{autor.Nombres} {autor.Apellidos}".Trim();
                    <tr>
                        <td>@autor.Nombres</td>
                        <td>@autor.Apellidos</td>
                        <td class="text-center">
                            @if (autor.RecursosCount > 0)
                            {
                                <span class="badge bg-warning text-dark">@autor.RecursosCount</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">0</span>
                            }
                        </td>
                        <td class="text-end">
                            <a asp-action="Edit" asp-route-id="@autor.IdAutor" class="btn btn-sm btn-outline-primary me-1">Editar</a>

                            @if (autor.RecursosCount == 0)
                            {
                                <form asp-action="DeleteConfirmed" method="post" asp-route-id="@autor.IdAutor"
                                      style="display:inline;" onsubmit="return confirm('¿Eliminar este autor?');">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-sm btn-outline-danger">Eliminar</button>
                                </form>
                            }
                            else
                            {
                                <button class="btn btn-sm btn-outline-secondary" disabled
                                        title="No se puede eliminar: vinculado a un recurso">
                                    Bloqueado
                                </button>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
