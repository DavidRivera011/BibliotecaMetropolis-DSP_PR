@model BibliotecaMetropolis.Models.RecursoEditViewModel
@{
    ViewData["Title"] = "Crear Recurso";
    Layout = "_Layout";
    var tipos = ViewData["Tipos"] as List<BibliotecaMetropolis.Models.DB.TipoRecurso> ?? new();
    var paises = ViewData["Paises"] as List<BibliotecaMetropolis.Models.DB.Pais> ?? new();
    var editoriales = ViewData["Editoriales"] as List<BibliotecaMetropolis.Models.DB.Editorial> ?? new();
    var autores = ViewData["Autores"] as List<BibliotecaMetropolis.Models.DB.Autor> ?? new();
}

<div class="card p-4">
    <h4>@ViewData["Title"]</h4>

    @if (!string.IsNullOrEmpty(TempData["Error"] as string))
    {
        <div class="alert alert-danger">@Html.Raw(TempData["Error"] as string)</div>
    }
    @if (!string.IsNullOrEmpty(TempData["Message"] as string))
    {
        <div class="alert alert-success">@TempData["Message"]</div>
    }

    <form id="recursoForm" asp-action="Create" method="post">
        @Html.AntiForgeryToken()

        <div class="row">
            <div class="col-md-5">
                <div class="mb-3">
                    <label class="form-label">Imagen (URL)</label>
                    <input asp-for="ImagenRuta" class="form-control" />
                </div>

                <div class="mb-3">
                    <label class="form-label">Título</label>
                    <input asp-for="Titulo" class="form-control" required />
                    <span asp-validation-for="Titulo" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label">Autor(es) <span class="text-danger">*</span></label>

                    @{
                        var sel0 = Model?.SelectedAuthorIds != null && Model.SelectedAuthorIds.Count > 0 ? Model.SelectedAuthorIds.ElementAtOrDefault(0) : 0;
                        var sel1 = Model?.SelectedAuthorIds != null && Model.SelectedAuthorIds.Count > 1 ? Model.SelectedAuthorIds.ElementAtOrDefault(1) : 0;
                        var sel2 = Model?.SelectedAuthorIds != null && Model.SelectedAuthorIds.Count > 2 ? Model.SelectedAuthorIds.ElementAtOrDefault(2) : 0;
                    }

                    <div class="author-row mb-2">
                        <select name="SelectedAuthorIds" class="form-select" required>
                            <option value="0" disabled selected>Seleccionar autor</option>
                            @foreach (var a in autores)
                            {
                                var fullname = (a.Nombres + " " + (a.Apellidos ?? "")).Trim();
                                if (a.IdAutor == sel0)
                                {
                                    <option value="@a.IdAutor" selected="selected">@fullname</option>
                                }
                                else
                                {
                                    <option value="@a.IdAutor">@fullname</option>
                                }
                            }
                        </select>
                    </div>

                    <div class="author-row mb-2">
                        <select name="SelectedAuthorIds" class="form-select">
                            <option value="0" selected>-- Seleccionar (opcional) --</option>
                            @foreach (var a in autores)
                            {
                                var fullname = (a.Nombres + " " + (a.Apellidos ?? "")).Trim();
                                if (a.IdAutor == sel1)
                                {
                                    <option value="@a.IdAutor" selected="selected">@fullname</option>
                                }
                                else
                                {
                                    <option value="@a.IdAutor">@fullname</option>
                                }
                            }
                        </select>
                    </div>

                    <div class="author-row mb-2">
                        <select name="SelectedAuthorIds" class="form-select">
                            <option value="0" selected>-- Seleccionar (opcional) --</option>
                            @foreach (var a in autores)
                            {
                                var fullname = (a.Nombres + " " + (a.Apellidos ?? "")).Trim();
                                if (a.IdAutor == sel2)
                                {
                                    <option value="@a.IdAutor" selected="selected">@fullname</option>
                                }
                                else
                                {
                                    <option value="@a.IdAutor">@fullname</option>
                                }
                            }
                        </select>
                    </div>

                </div>

                <div class="mb-3">
                    <label class="form-label">Editorial</label>
                    <div class="d-flex gap-2">
                        <select asp-for="IdEdit" class="form-select">
                            <option value="">Sin editorial</option>
                            @foreach (var e in editoriales)
                            {
                                <option value="@e.IdEdit">@e.Nombre</option>
                            }
                        </select>
                    </div>
                </div>
            </div>

            <div class="col-md-7">
                <div class="mb-3">
                    <label class="form-label">Descripción</label>
                    <textarea asp-for="Descripcion" class="form-control" rows="6"></textarea>
                </div>

                <div class="row g-2">
                    <div class="col-md-4">
                        <label class="form-label">Año</label>
                        <input asp-for="AnioPublicacion" class="form-control" />
                    </div>
                    <div class="col-md-4">
                        <label class="form-label">Edición</label>
                        <input asp-for="Edicion" class="form-control" />
                    </div>
                    <div class="col-md-4">
                        <label class="form-label">Cantidad</label>
                        <input asp-for="Cantidad" class="form-control" />
                    </div>

                    <div class="col-md-6">
                        <label class="form-label">Tipo de recurso</label>
                        <select asp-for="IdTipoR" class="form-select">
                            @foreach (var t in tipos)
                            {
                                <option value="@t.IdTipoR">@t.Nombre</option>
                            }
                        </select>
                    </div>

                    <div class="col-md-6">
                        <label class="form-label">País</label>
                        <select asp-for="IdPais" class="form-select">
                            <option value="">-- Sin país --</option>
                            @foreach (var p in paises)
                            {
                                <option value="@p.IdPais">@p.Nombre</option>
                            }
                        </select>
                    </div>

                    <div class="col-md-4 mt-2">
                        <label class="form-label">Precio</label>
                        <input asp-for="Precio" class="form-control" />
                    </div>

                    <div class="col-12 mt-3">
                        <label class="form-label">Palabras clave</label>

                        <div class="row g-2">
                            <div class="col-3">
                                <input name="Keywords" type="text" class="form-control form-control-sm" placeholder="Palabra (obligatoria)" maxlength="100" required />
                            </div>
                            <div class="col-3">
                                <input name="Keywords" type="text" class="form-control form-control-sm" placeholder="Palabra (opcional)" maxlength="100" />
                            </div>
                            <div class="col-3">
                                <input name="Keywords" type="text" class="form-control form-control-sm" placeholder="Palabra (opcional)" maxlength="100" />
                            </div>
                            <div class="col-3">
                                <input name="Keywords" type="text" class="form-control form-control-sm" placeholder="Palabra (opcional)" maxlength="100" />
                            </div>

                            <div class="col-3">
                                <input name="Keywords" type="text" class="form-control form-control-sm" placeholder="Palabra (opcional)" maxlength="100" />
                            </div>
                            <div class="col-3">
                                <input name="Keywords" type="text" class="form-control form-control-sm" placeholder="Palabra (opcional)" maxlength="100" />
                            </div>
                            <div class="col-3">
                                <input name="Keywords" type="text" class="form-control form-control-sm" placeholder="Palabra (opcional)" maxlength="100" />
                            </div>
                            <div class="col-3">
                                <input name="Keywords" type="text" class="form-control form-control-sm" placeholder="Palabra (opcional)" maxlength="100" />
                            </div>
                        </div>

                        <small class="form-text text-muted d-block mt-2">Máximo 8 palabras. El primer campo es obligatorio. Entrada compacta para ahorrar espacio.</small>
                    </div>

                </div>
            </div>
        </div>

        <div class="mt-3 d-flex gap-2">
            <button type="submit" class="btn" style="background:#ff8a00;color:white;">Crear recurso</button>
            <a asp-action="Index" asp-controller="Home" class="btn btn-secondary">Cancelar</a>
        </div>
    </form>
</div>
