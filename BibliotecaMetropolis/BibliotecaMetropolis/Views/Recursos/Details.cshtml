@model BibliotecaMetropolis.Models.RecursoDetailsViewModel
@{
    ViewData["Title"] = "Detalle del recurso";
    Layout = "_Layout";
}

<div class="row g-4">
    <div class="col-md-4">
        <div class="card recurso-card p-3">
            <div class="recurso-thumb" style="height:340px;">
                @if (!string.IsNullOrEmpty(Model.ImagenRuta))
                {
                    <img class="recurso-img" src="@Model.ImagenRuta" alt="@Model.Titulo" style="max-width:100%; max-height:100%; object-fit:contain;" />
                }
                else
                {
                    <div style="width:100%;height:100%;display:flex;align-items:center;justify-content:center;color:#aaa;">
                        Sin imagen
                    </div>
                }
            </div>

            <div class="mt-3">
                <h5 class="mb-1">@Model.Titulo</h5>
                <div class="text-muted">@Model.Autores</div>
                <div class="mt-2"><strong>Editorial:</strong> @Model.Editorial</div>
                <div class="mt-1"><strong>ID:</strong> @Model.IdRec</div>
                <div class="mt-2"><strong>Precio:</strong> @(Model.Precio.HasValue? Model.Precio.Value.ToString("C") : "—")</div>
            </div>
        </div>
    </div>

    <div class="col-md-8">
        <div class="card p-3">
            <h6 class="text-muted">Descripción</h6>
            <div class="mb-3" style="min-height:140px;background:#fff;padding:12px;border-radius:6px;">@Html.Raw(Model.Descripcion ?? "<em>Sin descripción</em>")</div>

            <div class="row g-2">
                <div class="col-md-4 mb-2">
                    <label class="form-label">Año publicación</label>
                    <input class="form-control" value="@(Model.AnioPublicacion?.ToString() ?? "")" readonly />
                </div>
                <div class="col-md-4 mb-2">
                    <label class="form-label">Edición</label>
                    <input class="form-control" value="@Model.Edicion" readonly />
                </div>
                <div class="col-md-4 mb-2">
                    <label class="form-label">Cantidad</label>
                    <input class="form-control" value="@Model.Cantidad" readonly />
                </div>

                <div class="col-md-6 mb-2">
                    <label class="form-label">Tipo de recurso</label>
                    <input class="form-control" value="@Model.TipoRecurso" readonly />
                </div>
                <div class="col-md-6 mb-2">
                    <label class="form-label">País</label>
                    <input class="form-control" value="@Model.Pais" readonly />
                </div>

                <div class="col-12 mt-3">
                    <label class="form-label">Palabras clave</label>
                    <div class="p-2" style="background:#fafafa;border-radius:6px;">@Model.PalabrasBusqueda</div>
                </div>
            </div>

            <div class="mt-4 d-flex gap-2">
                <a asp-action="Edit" asp-controller="Recursos" asp-route-id="@Model.IdRec" class="btn" style="background:#ff8a00;color:white;">Editar</a>

                <form asp-action="Delete" asp-controller="Recursos" asp-route-id="@Model.IdRec" method="post" onsubmit="return confirm('¿Eliminar recurso? Esta acción no se puede deshacer.');">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-danger" @(Model.Cantidad > 0 ? "disabled" : "")>Eliminar</button>
                </form>

                @if (TempData["Error"] != null)
                {
                    <div class="alert alert-warning ms-3">@TempData["Error"]</div>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
    </script>
}
